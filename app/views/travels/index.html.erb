<h1>Listing travels</h1>

<table>
  <tr>
    <th>Date</th>
    <th>From</th>
    <th>To</th>
    <th>Cost</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @travels.each do |travel| %>
  <tr>
    <td><%= travel.date %></td>
    <td><%= travel.from %></td>
    <td><%= travel.to %></td>
    <td><%= travel.cost %></td>
    <td><%= link_to 'Show', travel %></td>
    <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
    <td><%= link_to 'Destroy', travel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

